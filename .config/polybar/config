[module/menu]
type = custom/text
content = "   "
content-foreground = ${color.foreground}
click-left = $HOME/.config/wm\ script/rofi-select/rofi-select.sh
click-right = $HOME/.config/wm\ script/rofi-select/rofi-select.sh

[module/workspaces]
type = internal/xworkspaces
pin-workspaces = false
enable-click = true
enable-scroll = true
format-padding = 1

icon-default = 

format = <label-state>
; format-background = ${color.shade}
label-active = 
label-occupied = 
label-urgent = 
label-empty =  

label-empty-padding = 1
label-active-padding = 1
label-urgent-padding = 1
label-occupied-padding = 1

label-empty-foreground = ${color.foreground-alt}
label-active-foreground = ${color.acolor}
label-urgent-foreground = ${color.curgent}
label-occupied-foreground = ${color.coccupied}

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format-prefix = " "
format-prefix-foreground = ${color.foreground}
format-prefix-underline = ${color.foreground}

label-indicator-padding = 2
label-indicator-margin = 1
label-indicator-background = ${color.red}
label-indicator-underline = ${color.red} 

[module/date]
type = internal/date
interval = 30
time = %d %a, %I:%M %p
label =  %{A1:gsimplecal:}%time%%{A}
click-left = gsimplecal
click-right = gsimplecal

[module/powermenu]
type = custom/text
content = 襤
content-padding = 2
content-background = ${color.red}
content-foreground = ${color.foreground}
click-left = $HOME/.config/wm\ script/powermenu/powermenu.sh
click-right = $HOME/.config/wm\ script/powermenu/powermenu.sh

[module/network]
type = internal/network
interface = enp34s0
interval = 1.0
label-connected = "ﰬ %downspeed%  ﰵ %upspeed%"

[module/spotify]
type = custom/script
interval = 1
format = <label>
exec = python $HOME/.config/polybar/script/spotify -f '{artist}: {song}'

[module/mpd]
type = internal/mpd
format-online = <label-song>
label-song = 𝄞 %artist% - %title% 

[module/title]
type = internal/xwindow
format = <label>
format-foreground = $(color.foreground)
label = %title%
label-maxlen = 30

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
;pseudo-transparency = false

[global/wm]
margin-top = 0
margin-bottom = 0
; margin-left = 3
; margin-right = 3
; margin-top = 5
; margin-bottom = 5

