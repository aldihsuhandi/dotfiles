format-discharging = <ramp-capacity> <label-discharging>

label-charging-font = 1
label-charging = %percentage%%

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

animation-charging-0 = 
